<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButtonStyle">
        <item name="android:background">#f1f3f5</item> <!-- Light Gray -->
        <item name="android:textColor">#343a40</item> <!-- Dark Gray -->
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="app:cornerRaduis">12dp</item>
    </style>

    <style name="NumberButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">#D3D3D3</item> <!-- Light Gray -->
    </style>

    <style name="OperatorButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">#FFA500</item> <!-- Orange -->
    </style>

    <style name="EqualButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">#007BFF</item> <!-- Blue -->
    </style>

    <style name="ClearButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">#FF4C4C</item> <!-- Red -->
    </style>

</resources>